@model SetPasswordViewModel

<div style="display:flex; justify-content:center; width:100%; height:50vh; align-items:center;">
    <form style="width:375px;" class="form-control" asp-controller="Account" asp-action="SetPassword" method="post">
        <label class="form-label" asp-for="setPassword">Set Password</label>
        <input type="password" asp-for="setPassword" autocomplete="off" placeholder="Set Password" class="form-control" />
        <br />
        <label class="form-label" asp-for="setPasswordConfirm">Set Password Confirm</label>
        <input type="password" asp-for="setPasswordConfirm" autocomplete="off" placeholder="Set Password Confirm" class="form-control" />
        <br />
        <div style="display:flex; justify-content:center;">
            <button class="btn btn-primary mt-2">Submit</button>
        </div>
        <div style="display:flex; justify-content:center; margin:10px;">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
    </form>
</div>
@section Scripts {
<partial name="_Validator"/>
}