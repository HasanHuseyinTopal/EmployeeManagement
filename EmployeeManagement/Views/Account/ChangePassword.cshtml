@model ChangePasswordViewModel

<div style="display:flex; justify-content:center; width:100%; height:50vh; align-items:center;">
    <form style="width:375px;" class="form-control" asp-controller="Account" asp-action="ChangePassword" method="post">
        <label class="form-label" asp-for="oldPassword">Old Password</label>
        <input type="password" asp-for="oldPassword" autocomplete="off" placeholder="Old Password" class="form-control" />
        <br />
        <label class="form-label" asp-for="newPassword">Old Password</label>
        <input type="password" asp-for="newPassword" autocomplete="off" placeholder="New Password" class="form-control" />
        <br />
        <label class="form-label" asp-for="newPasswordConfirm">New Password Confirm</label>
        <input type="password" asp-for="newPasswordConfirm" autocomplete="off" placeholder="New Password Confirm" class="form-control" />
        <br />
        <div style="display:flex; justify-content:center;">
            <button class="btn btn-primary mt-2">Submit</button>
        </div>
        <div style="display:flex; justify-content:center; margin:10px;">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
    </form>
</div>
@section Scripts {
    <partial name="_Validator" />
}