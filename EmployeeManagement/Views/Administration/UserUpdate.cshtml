@model UserUpdateViewModel

<div style="display:flex; max-width:100%; flex-direction:column; align-items:center; justify-content:center; padding:100px;">
    <form class="form-control" style="width:375px;" asp-controller="Administration" asp-action="UserUpdate" method="post">
        <input hidden asp-for="userId" />
        <h5><span class="text-danger">User ID</span> : @Model.userId</h5>
        <br />
        <label class="form-label" asp-for="@Model.userName">User Name</label>
        <input asp-for="userName" autocomplete="off" class="form-control" style="width:350px;" />
        <br />
        <label class="form-label" asp-for="@Model.userEmail">Email</label>
        <input asp-for="userEmail" autocomplete="off" class="form-control" style="width:350px;" />
        <br />
        <label class="form-label" asp-for="@Model.userCity">City</label>
        <input asp-for="userCity" autocomplete="off" class="form-control" style="width:350px;" />
        <br />
        <div style="display:flex; justify-content:center;">
            <button class="btn btn-primary mt-2">Submit</button>
        </div>
        <div style="display:flex; justify-content:center; margin:10px;">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
    </form>
    <div class="card mt-2" style="width:375px;">
        <div class="card-header">
            <h3>User's role</h3>
        </div>
        <div class="card-body">
            @if (Model.roles.Any())
            {
                foreach (var role in Model.roles)
                {
                    <h5 class="card-title">@role</h5>
                }
            }
            else
            {
                <h5 class="card-title">None at the moment</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-controller="Administration" asp-action="UserUpdateOrDeleteRolesFromUser" asp-route-userId="@Model.userId" class="btn btn-primary" style="width:auto">Add Or Remove Roles</a>
        </div>
        <div class="card mt-2" style="width:375px;">
            <div class="card-header">
                <h3>User's claim</h3>
            </div>
            <div class="card-body">
                @if (Model.claims.Any())
                {
                    foreach (var claim in Model.claims)
                    {
                        <h5 class="card-title">@claim</h5>
                    }
                }
                else
                {
                    <h5 class="card-title">None at the moment</h5>
                }
            </div>
            <div class="card-footer">
                <a asp-controller="Administration" asp-action="ManageUserClaims" asp-route-userId="@Model.userId" class="btn btn-primary" style="width:auto">Add Or Remove Roles</a>
            </div>
        </div>
    </div>

</div>

